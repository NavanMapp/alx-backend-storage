#!/usr/bin/env python3
"""
Script to delete all documents with name="Holberton school" in the "school" collection
"""

import sys
import pymongo

def delete_documents_with_name(database_name):
    # Create a MongoDB client
    client = pymongo.MongoClient("mongodb://127.0.0.1:27017/")

    # Access the specified database
    db = client[database_name]

    # Access the "school" collection
    collection = db["school"]

    # Delete documents with name="Holberton school"
    query = {"name": "Holberton school"}
    result = collection.delete_many(query)

    # Print the delete result
    print(result)

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: python3 script.py <database_name>")
        sys.exit(1)

    database
