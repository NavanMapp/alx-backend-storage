#!/usr/bin/env python3
"""
Script to list documents in the "school" collection with name="Holberton school"
"""

import sys
import pymongo

def list_documents_with_name(database_name):
    # Create a MongoDB client
    client = pymongo.MongoClient("mongodb://127.0.0.1:27017/")

    # Access the specified database
    db = client[database_name]

    # Access the "school" collection
    collection = db["school"]

    # Find documents with name="Holberton school"
    documents = collection.find({"name": "Holberton school"})

    # Print the matching documents
    for doc in documents:
        print(doc)

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: python3 script.py <database_name>")
        sys.exit(1)

    database_name = sys.argv[1]
    list_documents_with_name(database_name)
